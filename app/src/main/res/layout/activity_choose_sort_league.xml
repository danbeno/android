<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ca.mcgill.ecse321.scorekeeper.chooseSortLeague"
    android:background="@drawable/background">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="392dp"
        android:layout_height="wrap_content"
        android:text="Sort By Points"
        android:id="@+id/button27"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="gotToLeagueDataPoints" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="398dp"
        android:layout_height="wrap_content"
        android:text="Sort By Goals"
        android:id="@+id/button28"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/button27"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="goToLeagueDataGoals" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="388dp"
        android:layout_height="wrap_content"
        android:text="Sort By Infractions"
        android:id="@+id/button29"
        android:layout_below="@+id/button28"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="goToLeagueDataInfractions" />
</RelativeLayout>
