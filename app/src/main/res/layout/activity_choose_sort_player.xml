<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ca.mcgill.ecse321.scorekeeper.chooseSortPlayer"
    android:background="@drawable/background">

    <Button
        android:layout_width="401dp"
        android:layout_height="wrap_content"
        android:text="Sort By Goals"
        android:id="@+id/button24"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="goToPlayerDataGoals" />

    <Button
        android:layout_width="397dp"
        android:layout_height="wrap_content"
        android:text="Sort By Infractions"
        android:id="@+id/button25"
        android:layout_below="@+id/button24"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="goToPlayerDataInfractions" />
</RelativeLayout>
